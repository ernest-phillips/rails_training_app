<h1>All Movies</h1>
<% if current_member %>
  Logged in as <%= current_member.email %>
<% else %>
  <%= link_to "Log In", login_path %>
<% end %>
<dl>
  <% movies.each do |movie| %>
    <dt style= "font-weight: bold; font-family: Georgia, 'Times New Roman', Times, serif;"><%= movie.title %></dt>
    <dd style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">directed by <%= movie.director&.name %></dd>
    <dd style="font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;">year: <%= movie.year %></dd>
  <% end %>
</dl>

<%= button_to "Add New Movie", new_movie_path, method: :get %>
